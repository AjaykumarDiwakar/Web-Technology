git -v
git --version
git configuration

config --global user.name "name"
config --global user.email "email"
git config --global core.editor "code --wait"
git config --global core.autocrlf true

edit global configuration
git config --global -e


u->untracked

git add filename.extension'

now a->tracked or staged changes

git commit -m " "

where m->any commit message

now file is saved

//change the message for recently saved file
git commit --amend -m " "

//to change the name of branch from master to main
git branch -M main


git reset --head-3

//to create a branch

git branch branchname

//check all branches

git branch

//to switch to a branch

git switch branchname